{
	"manifest_version": 2,
	"name": "Oral Chess",
	"version": "1.0",
	"description": "Play Chess Orally!",
	"permissions": ["storage", "activeTab"],
	"icons": {
		"225": "icons/icon.png"
	},
	"browser_action": {
		"default_icon": "icons/icon.png",
		"default_title": "Oral Chess",
		"default_popup": "menu/menu.html"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/automaticallyRecalibrate.js"]
		}
	]
}